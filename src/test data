    verified: true,
    stats: {
      restaurants: 3,
      products: 12,
      reviews: 45,
      rating: 4.8
    }
  };

  // Sample restaurants data
  const [restaurants, setRestaurants] = useState([
    {
      id: 1,
      name: "Mountain View Restaurant",
      cuisine: "Local & Continental",
      location: "Skardu City Center",
