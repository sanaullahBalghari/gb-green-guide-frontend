      revenue: "Rs. 18,000/month"
    }
  ]);

  // Sample products data
  const [products, setProducts] = useState([
    {
      id: 1,
      name: "Premium Apricots",
      category: "Dry Fruits",
      price: "Rs. 1,200/kg",
      stock: 50,
